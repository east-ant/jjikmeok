<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_analyze"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 1. 상단 툴바 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:subtitle="4개 재료 선택됨"
        app:title="인식된 재료" />

    <!-- 2. 하단 레시피 찾기 버튼 (화면 최하단에 고정) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_find_recipe"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="레시피 찾기 (4개 재료)"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#1A1A1A"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_search"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 3. 스크롤되는 메인 컨텐츠 영역 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btn_find_recipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!-- 스크롤 뷰 안의 실제 컨텐츠들 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 3-1. 사용자가 찍은 사진 -->
            <ImageView
                android:id="@+id/iv_user_photo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#E0E0E0"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <!-- 3-2. 재료 목록 타이틀 -->
            <TextView
                android:id="@+id/tv_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="재료 목록"
                android:textColor="#1C1C1E"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_user_photo" />

            <!-- 3-3. AI 인식 완료 칩 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_ai_status"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 인식 완료"
                android:textColor="#00838F"
                app:chipBackgroundColor="#E0F7FA"
                app:chipIcon="@android:drawable/ic_dialog_info"
                app:chipIconTint="#00838F"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_list_title"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 3-4. 재료 목록 -->
            <LinearLayout
                android:id="@+id/ll_ingredient_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_list_title">

                <!-- 재료 항목 1: 토마토 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_check_tomato"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/checkbox_on_background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_name_tomato"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="토마토"
                            android:textColor="#1C1C1E"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/iv_check_tomato"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_accuracy_tomato"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="정확도 95%"
                            android:textColor="#8A8A8E"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@id/tv_name_tomato"
                            app:layout_constraintTop_toBottomOf="@id/tv_name_tomato" />

                        <ImageView
                            android:id="@+id/iv_delete_tomato"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_menu_delete"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="#B0B0B0" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 재료 항목 2: 양파 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_check_onion"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/checkbox_on_background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_name_onion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="양파"
                            android:textColor="#1C1C1E"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/iv_check_onion"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_accuracy_onion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="정확도 88%"
                            android:textColor="#8A8A8E"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@id/tv_name_onion"
                            app:layout_constraintTop_toBottomOf="@id/tv_name_onion" />

                        <ImageView
                            android:id="@+id/iv_delete_onion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_menu_delete"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="#B0B0B0" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 재료 항목 3: 마늘 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_check_garlic"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/checkbox_on_background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_name_garlic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="마늘"
                            android:textColor="#1C1C1E"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/iv_check_garlic"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_accuracy_garlic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="정확도 82%"
                            android:textColor="#8A8A8E"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@id/tv_name_garlic"
                            app:layout_constraintTop_toBottomOf="@id/tv_name_garlic" />

                        <ImageView
                            android:id="@+id/iv_delete_garlic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_menu_delete"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="#B0B0B0" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 재료 항목 4: 달걀 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_check_egg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/checkbox_on_background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_name_egg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="달걀"
                            android:textColor="#1C1C1E"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/iv_check_egg"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_accuracy_egg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="정확도 79%"
                            android:textColor="#8A8A8E"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@id/tv_name_egg"
                            app:layout_constraintTop_toBottomOf="@id/tv_name_egg" />

                        <ImageView
                            android:id="@+id/iv_delete_egg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_menu_delete"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="#B0B0B0" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- 3-5. 재료 추가하기 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_ingredient"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="재료 추가하기"
                android:textColor="#1A1A1A"
                app:icon="@android:drawable/ic_input_add"
                app:iconTint="#1A1A1A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_ingredient_list"
                app:strokeColor="#E0E0E0" />

            <!-- 3-6. 정보 안내 상자 -->
            <TextView
                android:id="@+id/tv_info_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:drawableStart="@android:drawable/ic_dialog_info"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4sp"
                android:padding="16dp"
                android:text="선택한 재료로 만들 수 있는 요리를 찾아드립니다. 재료를 선택 또는 해제하여 검색 결과를 조절할 수 있습니다."
                android:textColor="#333333"
                android:textSize="14sp"
                app:drawableTint="#505050"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_add_ingredient" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>